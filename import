import sys
sys.path.append('/home/administrator/Desktop/mca101')
import kalpana
def main():
    '''
    objective: to find the area of rectangle,triangle
    input parameters:
                    length of rectangle
                    breadh of rectangle
                    side of triangle
                    base of triangle
    return value: area of rectangle,square
    '''
    print('1. area of rectangle')
    print('2. area of triangle')
    c=int(input('enter choice'))
    if c==1:
       l=int(input('enter length'))
       b=int(input('enter breadth'))
       print('area of rectangle',kalpana.areaRectangle(l,b))
    elif c==2:
       b=int(input('enter base'))
       h=int(input('enter height'))
       print('area of triangle',kalpana.areaTriangle(b,h))

if __name__=='__main__':
    main()
